# VHT Co-Pilot Backend Configuration
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-secret-key-here-generate-new-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite for development)
DATABASE_URL=sqlite:///db.sqlite3

# OpenAI API (REQUIRED - Get from https://platform.openai.com)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.2

# Whisper Settings
WHISPER_MODEL=whisper-1

# ChromaDB Settings
CHROMA_PERSIST_DIRECTORY=./chroma_data
CHROMA_COLLECTION_NAME=uganda_moh_guidelines

# Redis (for Celery - optional for now)
REDIS_URL=redis://localhost:6379/0

# SMS Gateway (REQUIRED LATER - comment out for now)
# SMS_PROVIDER=twilio  # or africastalking
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+1234567890
# AFRICASTALKING_USERNAME=your-username
# AFRICASTALKING_API_KEY=your-api-key

# Emergency Settings
EMERGENCY_TRIAGE_THRESHOLD=8
EMERGENCY_CONFIDENCE_THRESHOLD=0.75

# File Upload Settings
MAX_AUDIO_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_AUDIO_FORMATS=wav,mp3,m4a,ogg

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:8081,http://192.168.1.*

# Sentry (Error Monitoring - optional)
# SENTRY_DSN=your-sentry-dsn-here

# Email Settings (for notifications - optional)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-password
